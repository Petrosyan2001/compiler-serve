{
  "name": "@compiler-server/compiler",
  "version": "1.1.5",
  "bin": {
    "compiler-lang": "dist/index.js"
  },
  "prepublishOnly": "npm run lint",
  "preversion": "npm run lint",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Petrosyan2001/compiler-serve.git"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "petrosyan.petros.2001 <petros-petrosyan-51@mail.ru>",
  "keywords": [
    "compiler",
    "node js"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "start": "nodemon",
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "semantic-release": "semantic-release",
    "prepack": "npm run build"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "./node_modules/.bin/ts-node -r ./configs/tsconfig.base.json ./src"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": ["*.interface.ts"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./configs/tsconfig.base.json"
    },
    "rules": {
      "no-console": 0,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-empty-function": 0,
      "@typescript-eslint/no-unsafe-argument": 0,
      "@typescript-eslint/no-unsafe-call": 0,
      "@typescript-eslint/await-thenable": 0,
      "no-undef": 0,
      "max-len": 0,
      "@typescript-eslint/restrict-template-expressions": 0,
      "@typescript-eslint/require-await": 0,
      "@typescript-eslint/no-misused-promises": 0
    }
  },
  "eslintIgnore": [
    "*.d.ts"
  ],
  "description": "Compiler Programing Language",
  "bugs": {
    "url": "https://github.com/Petrosyan2001/compiler-serve/issues"
  },
  "homepage": "https://github.com/Petrosyan2001/compiler-serve#readme",
  "dependencies": {
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "nodemon": "^2.0.20",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/shelljs": "^0.8.11",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "semantic-release": "^19.0.3",
    "@types/chai": "^4.3.3"
  }
}
